{
  "name": "nu-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nu-core/src",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/nu-core",
        "main": "packages/nu-core/src/index.ts",
        "tsConfig": "packages/nu-core/tsconfig.lib.json",
        "assets": ["packages/nu-core/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/nu-core/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/nu-core"],
      "options": {
        "jestConfig": "packages/nu-core/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
